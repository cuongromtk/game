<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sexy Teambuilding</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: url('https://images.unsplash.com/photo-1601979031925-6b0b92f70bdf?auto=format&fit=crop&w=1600&q=80') center center / cover no-repeat fixed, #ffc0cb;
      color: #d63384;
      text-align: center;
      min-height: 100vh;
    }
    .container {
      position: relative;
      top: 20vh;
    }
    input[type="text"] {
      padding: 10px;
      width: 250px;
      border: none;
      border-radius: 5px;
    }
    button {
      padding: 10px 15px;
      background-color: #d63384;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Sexy Teambuilding</h1>
    <input type="text" id="account" placeholder="Hãy nhập account của bạn" />
    <button onclick="handleSubmit()">Submit</button>
  </div>

  <script>
    // Firebase config - THAY THẾ bằng config thực tế của bạn
    const firebaseConfig = {
	  apiKey: "AIzaSyBI2a1RIgMNSnvgU2B1ELGnC5MyB32L178",
	  authDomain: "account-a82ff.firebaseapp.com",
      databaseURL: "https://account-a82ff-default-rtdb.asia-southeast1.firebasedatabase.app/",
	  projectId: "account-a82ff",
	  storageBucket: "account-a82ff.firebasestorage.app",
	  messagingSenderId: "931607492111",
	  appId: "1:931607492111:web:7f4c2c2d8509bcfae6d57a"
    };

    // Khởi tạo Firebase
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    // Lắng nghe và hiển thị tin nhắn
    const output = document.getElementById("outputContainer");
    db.ref("messages").on("child_added", (snapshot) => {
      const value = snapshot.val();
      const msgDiv = document.createElement("div");
      msgDiv.className = "message";
      msgDiv.textContent = value;
      output.insertBefore(msgDiv, output.firstChild);
    });

    function handleSubmit() {
      const input = document.getElementById("userInput");
      const value = input.value.trim();
      if (value) {
        db.ref("messages").push(value);
        input.value = "";
      }
    }
  </script>
</body>
</html>
